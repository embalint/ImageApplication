<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/fragmentSquadID"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.krunoslavtill.imageapplication.HomePage"
    android:layout_above="@+id/header"
    android:orientation="vertical"
    tools:showIn="@layout/app_bar_home_page">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Squad"
        android:id="@+id/headerSquad"
        android:layout_gravity="center_horizontal"
        android:textAlignment="center"
        android:background="#091f4b"
        android:textColor="@color/abc_primary_text_material_dark" />





    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >


        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/squad_recycle_view"
            android:scrollbars="vertical"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"

            />

    </LinearLayout>





</LinearLayout>